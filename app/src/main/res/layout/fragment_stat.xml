<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminStatFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btnShowPie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic Product by Category"
            android:textSize="20sp"
            android:backgroundTint="@color/textColorHint"
            android:onClick="openStatisticProductByCategoryActivity" />

        <Button
            android:id="@+id/btnStatisticTotalRevenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic Total Revenue"
            android:backgroundTint="@color/textColorHint"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:onClick="openStatisticTotalRevenue"
             />

    </LinearLayout>

</FrameLayout>