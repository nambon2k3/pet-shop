<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Address Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDefaultTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFB74D"
                android:padding="4dp"
                android:text="Mặc định"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNamePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Name - Phone number"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quận 1, TP. Hồ Chí Minh"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Không hỗ trợ lấy hàng"
            android:textColor="#E57373"
            android:textSize="12sp" />
        <!-- Bottom row with Switch and Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <!-- Default Switch -->
            <Switch
                android:id="@+id/switchDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Default"
                android:textColor="#333333"
                android:textSize="14sp" />

            <!-- Edit Button -->
            <TextView
                android:id="@+id/btnEditAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Edit"
                android:textColor="@color/red" />
        </LinearLayout>

    </LinearLayout>

    <!-- Check Icon -->
    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp"
        android:src="@drawable/baseline_check_24" />

</LinearLayout>
