<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:text="Do you want to delete this item?"
        android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn_delete_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_delete_title"
            app:layout_constraintStart_toStartOf="@id/tv_delete_title"
            app:layout_constraintEnd_toEndOf="@id/tv_delete_title"
            android:layout_marginTop="20dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:backgroundTint="@color/textColorHint"/>


</androidx.constraintlayout.widget.ConstraintLayout>