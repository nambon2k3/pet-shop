<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:text="Success detail"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Carrier Logo and Tracking Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvShipmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp"
            android:text="Shipment code"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgShipmentLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/red" />

        <TextView
            android:id="@+id/tvShipmentCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipment code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Pickup Address Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address from"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/addressFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R1 Urban"
        android:textColor="#333333"
        android:paddingBottom="2dp" />



    <!-- Pickup Address To Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:text="Address to"
        android:textColor="#333333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R1 Urban"
        android:textColor="#333333"
        android:paddingBottom="2dp" />

    <!-- Pickup Address To Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:text="Order status"
        android:textColor="#333333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chờ đơn vị vận chuyển đến lấy hàng"
        android:textColor="#333333"
        android:paddingBottom="2dp" />

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="OK"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
