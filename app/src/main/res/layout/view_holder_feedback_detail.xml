<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="6dp"
    android:background="@drawable/rectangle_button_border_gray">

    <!-- Avatar ImageView -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/imv_feedback_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_avatar"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars"
            android:adjustViewBounds="true" />

    </LinearLayout>


    <!-- Feedback Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_feedback_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />



        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/rtb_feedback_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:isIndicator="true"
            android:progressTint="@color/yellow"
            android:numStars="5"
            android:stepSize="0.5" />

        <!-- User Comment -->
        <TextView
            android:fontFamily="@font/poppins_light"
            android:id="@+id/tv_feedback_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User comment"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />
        <ImageView
            android:id="@+id/imv_product_image_feedback"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_avatar"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_feedback_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:fontFamily="@font/poppins_light"
            android:text="Created at: 2024-09-2003 09:09:09"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</LinearLayout>
