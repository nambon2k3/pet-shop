<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_admin_manage_product"
    tools:context=".AdminManageProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnShowTrendingProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Top Trending Product"
            android:textSize="20sp"
            android:backgroundTint="@color/textColorHint"
            android:onClick="openViewTopTrendingProduct" />

        <Button
            android:id="@+id/btnAddNewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Product"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/textColorHint"
            android:onClick="openAddProductActivity" />

        <Button
            android:id="@+id/btnViewListProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Product"
            android:backgroundTint="@color/textColorHint"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:onClick="openUpdateProductActivity" />
        <Button
            android:id="@+id/btnManageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Category"
            android:backgroundTint="@color/textColorHint"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:onClick="openManageCategory" />


    </LinearLayout>

</FrameLayout>
